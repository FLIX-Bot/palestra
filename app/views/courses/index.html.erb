<p id="notice"><%= notice %></p>

<h1>Scopri i nostri corsi</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Orari</th>
      <th>Ore</th>
      <th>Partecipanti</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.tipo %></td>
        <td><%= course.orari %></td>
        <td><%= course.ore %></td>
        <td><%= course.partecipanti %></td>
        <td> 
         <% if course.cover.attached? %>
          <%= image_tag url_for(course.cover), class: 'w-50'%>
         <% end %>
        </td>
        <td><%= link_to '📟 Mostra', course, class:"btn btn-outline-dark" %></td>
        <td><%= link_to '✏️ Modifica', edit_course_path(course), class:"btn btn-outline-dark" %></td>
        <td><%= link_to '❌ Elimina', course, method: :delete, data: { confirm: '✔️  Sei sicuro di voler eliminare il corso?  ❌' }, class:"btn btn-outline-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo corso', new_course_path, class:"btn btn-dark btn-block" %>
